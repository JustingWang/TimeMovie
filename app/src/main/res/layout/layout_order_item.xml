<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/material_component_cards_padding_from_edge_of_screen_to_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/order_item_movieposter"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:layout_toRightOf="@id/order_item_movieposter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/order_item_moviename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_text"
                android:maxLines="1"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:textSize="@dimen/material_typography_subheading"/>

            <TextView
                android:id="@+id/order_item_cinemaname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/material_typography_caption" />

            <TextView
                android:id="@+id/order_item_movieshowtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/material_typography_caption" />

            <TextView
                android:id="@+id/order_item_hallname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/material_typography_caption" />

            <TextView
                android:id="@+id/order_item_ticketprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/material_typography_caption" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>